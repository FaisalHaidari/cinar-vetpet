datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  phone    String?
  avatar   String?
}

model Urun {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  category String
  image    String?
} 